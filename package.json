{
  "name": "format-files-by-ignores",
  "displayName": "Format Files By Ignores",
  "description": "Format files by ignore files (.gitignore, ...)",
  "version": "1.5.0",
  "private": true,
  "icon": "icon.png",
  "publisher": "xiaohuohumax",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohuohumax/format-files-by-ignores.git"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "format-files",
    "ignore",
    "gitignore",
    "format-folder",
    "format-wrokspace",
    "format folder",
    "format workspace",
    "batch format files",
    "formatters"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "properties": {
          "formatFilesByIgnores.collapseExplorerFolders": {
            "scope": "resource",
            "type": "boolean",
            "description": "Whether to collapse the explorer folder after formatting?",
            "default": true
          },
          "formatFilesByIgnores.useIgnoreExtension": {
            "scope": "resource",
            "type": "boolean",
            "description": "Is use ignore extension?",
            "default": true
          },
          "formatFilesByIgnores.ignoreExtension": {
            "scope": "resource",
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Ignore extension rules (root folder)",
            "default": [
              "node_modules",
              ".vscode",
              ".git",
              "dist"
            ]
          },
          "formatFilesByIgnores.ignoreFileNames": {
            "scope": "resource",
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Ignore files name",
            "default": [
              ".gitignore",
              ".formatignore"
            ]
          },
          "formatFilesByIgnores.organizeImports": {
            "scope": "resource",
            "type": "boolean",
            "description": "Is organize imports?",
            "default": false
          }
        }
      }
    ],
    "commands": [
      {
        "command": "formatFilesByIgnores.start.formatFolder",
        "title": "Start Format Folder By Ignores ðŸ“‚",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder && !formatFilesByIgnores.formating"
      },
      {
        "command": "formatFilesByIgnores.start.formatWorkspace",
        "title": "Start Format Workspace By Ignores ðŸ“‚",
        "enablement": "!formatFilesByIgnores.formating"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder && !formatFilesByIgnores.formating",
          "command": "formatFilesByIgnores.start.formatFolder",
          "group": "navigation@-1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build",
    "build": "vite build --emptyOutDir",
    "watch": "vite build --watch --mode development --emptyOutDir",
    "pretest": "npm run compile && npm run lint:fix",
    "open-in-web": "vscode-test-web --extensionDevelopmentPath=. .",
    "lint:fix": "eslint --ext .ts,.mts,.d.ts --fix .",
    "changeset": "changeset",
    "vsce-publish": "vsce publish",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/test-web": "^0.0.53",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.2.5"
  },
  "dependencies": {
    "ignore": "^5.3.1"
  }
}