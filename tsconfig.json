{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "out",
    "lib": [
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "paths": {
      "#/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "types",
    "vite.config.mts"
  ]
}